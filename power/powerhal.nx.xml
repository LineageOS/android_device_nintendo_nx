<powerhal>
    <!-- handle joycon sleep/wake -->
    <input_devices>
        <input name="joyconl"/>
        <input name="joyconr"/>
    </input_devices>

    <!-- set boot clk boost for 100 ms -->
    <boot_boost time="100"/>
</powerhal>
